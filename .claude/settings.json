{
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(uv run:*)",
      "Bash(make:*)",
      "Bash(git:*)"
    ],
    "deny": [
      "Bash(rm -r:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(git commit:*)",
      "Bash(npm publish:*)",
      "Bash(python:*)",
      "Bash(uv tool:*)"
    ]
  },
  "model": "opus",
  "alwaysThinkingEnabled": true,
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$HOME\"/.claude/hooks/notify-waiting.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$HOME\"/.claude/hooks/notify-complete.sh"
          }
        ]
      }
    ]
  },
  "preferredNotifChannel": "terminal_bell"
}
